<script>
function countdown(targetDate, elementId) {
  const date = new Date(targetDate).getTime();
  const el = document.getElementById(elementId);
  if (!el) return; // Added safety check
  const timer = setInterval(() => {
    const now = new Date().getTime();
    const dist = date - now;
    if (dist < 0) {
      clearInterval(timer);
      el.innerHTML = "üíê The Celebration is Happening Today!";
      return;
    }
    const days = Math.floor(dist / (1000*60*60*24));
    const hrs = Math.floor((dist % (1000*60*60*24)) / (1000*60*60));
    const mins = Math.floor((dist % (1000*60*60)) / (1000*60));
    const secs = Math.floor((dist % (1000*60)) / 1000);
    el.innerHTML = `${days} Days ${hrs} Hours ${mins} Min ${secs} Sec`;
  }, 1000);
}
countdown("Nov 9, 2025 18:30:00", "receptionCountdown");
countdown("Nov 10, 2025 05:30:00", "marriageCountdown");

// Attendance confirmation with improved validation and features
let guests = [];
try {
  const stored = localStorage.getItem("weddingGuests");
  if (stored) guests = JSON.parse(stored);
} catch (error) {
  console.warn("localStorage not available:", error);
}

function updateGuestList() {
  document.getElementById("guestNames").innerText = guests.length ? guests.join(", ") : "None yet.";
}

document.getElementById("attendanceForm").addEventListener("submit", e => {
  e.preventDefault();
  const name = document.getElementById("guestName").value.trim();
  const errorEl = document.getElementById("errorMessage");
  const thankEl = document.getElementById("thankyouMessage");
  if (name.length < 2) {
    errorEl.style.display = "block";
    thankEl.style.display = "none";
    return;
  }
  errorEl.style.display = "none";
  if (!guests.includes(name)) guests.push(name);
  try {
    localStorage.setItem("weddingGuests", JSON.stringify(guests));
  } catch (error) {
    console.warn("localStorage not available:", error);
  }
  document.getElementById("attendanceForm").style.display = "none";
  thankEl.style.display = "block";
  updateGuestList();
});

document.getElementById("viewGuestsBtn").addEventListener("click", () => {
  const listEl = document.getElementById("guestList");
  listEl.style.display = listEl.style.display === "none" ? "block" : "none";
  updateGuestList();
});

document.getElementById("resetBtn").addEventListener("click", () => {
  guests = [];
  try {
    localStorage.removeItem("weddingGuests");
  } catch (error) {
    console.warn("localStorage not available:", error);
  }
  document.getElementById("attendanceForm").style.display = "block";
  document.getElementById("thankyouMessage").style.display = "none";
  document.getElementById("errorMessage").style.display = "none";
  document.getElementById("guestList").style.display = "none";
  updateGuestList();
});

if (guests.length) {
  document.getElementById("attendanceForm").style.display = "none";
  document.getElementById("thankyouMessage").style.display = "block";
}

const music = document.getElementById('bgMusic');
const btn = document.getElementById('musicBtn');
if (music) {
  music.play().catch(() => { console.log("Autoplay blocked."); });
  btn.addEventListener('click', () => {
    if (music.paused) {
      music.play();
      btn.textContent = '‚è∏ Pause Music';
    } else {
      music.pause();
      btn.textContent = 'üéµ Play Music';
    }
  });
}
</script>
